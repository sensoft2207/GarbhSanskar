<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mxi.garbhsanskar">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.SignUpActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.HomeActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.HomeActivityTwo"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.TaskWithTextVideoActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.TaskWithTextOnly"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.TaskWithCategory"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.TaskWithCategoryDetail"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.TaskWithImages"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activity.VideoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"/>

    </application>

</manifest>