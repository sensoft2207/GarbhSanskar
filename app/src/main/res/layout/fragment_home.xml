<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/parts_main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<android.support.v7.widget.CardView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:elevation="40dp"
            app:cardBackgroundColor="@color/back_colorr">

        </android.support.v7.widget.CardView>-->

        <FrameLayout
            android:id="@+id/ad_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:background="@drawable/menu_curve">

            <LinearLayout
                android:id="@+id/ln_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/green_circle"
                android:elevation="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <com.mxi.garbhsanskar.widget.MyTextviewLight

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Day"
                    android:textColor="@color/parts_main"
                    android:textSize="22sp" />

                <com.mxi.garbhsanskar.widget.MyTextviewLight

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/parts_main"
                    android:textSize="18sp"
                    android:paddingTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|right"
                android:layout_gravity="bottom"
                android:paddingRight="10dp">

                <LinearLayout
                    android:id="@+id/ln_choose_date"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/green_circle"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|left"
                android:layout_gravity="bottom"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/red_circle"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.mxi.garbhsanskar.widget.MyTextviewLight
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/parts_main"
                        android:textSize="18sp"/>


                </LinearLayout>

            </LinearLayout>


        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ad_day"
            android:paddingTop="20dp"
            android:background="@color/parts_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"


                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/ln_task_one"
                            style="@style/Widget.CardContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="40dp"
                            android:paddingBottom="40dp">

                            <com.mxi.garbhsanskar.widget.MyTextviewLight
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/back_colorr"
                                android:textSize="15sp"
                                android:text="@string/m_1"
                                android:gravity="center"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ln_task_two"
                                style="@style/Widget.CardContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="40dp"
                                android:paddingBottom="40dp">

                                <com.mxi.garbhsanskar.widget.MyTextviewLight
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/back_colorr"
                                    android:textSize="15sp"
                                    android:text="@string/m_5"
                                    android:gravity="center"/>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ln_task_three"
                                style="@style/Widget.CardContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="40dp"
                                android:paddingBottom="40dp">

                                <com.mxi.garbhsanskar.widget.MyTextviewLight
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/back_colorr"
                                    android:textSize="15sp"
                                    android:text="@string/m_2"
                                    android:gravity="center"/>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"

                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/ln_task_four"
                            style="@style/Widget.CardContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="40dp"
                            android:paddingBottom="40dp">

                            <com.mxi.garbhsanskar.widget.MyTextviewLight
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/back_colorr"
                                android:textSize="15sp"
                                android:text="@string/m_3"
                                android:gravity="center"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ln_task_five"
                                style="@style/Widget.CardContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="40dp"
                                android:paddingBottom="40dp">

                                <com.mxi.garbhsanskar.widget.MyTextviewLight
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/back_colorr"
                                    android:textSize="15sp"
                                    android:text="@string/m_6"
                                    android:gravity="center"/>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ln_task_six"
                                style="@style/Widget.CardContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="40dp"
                                android:paddingBottom="40dp">

                                <com.mxi.garbhsanskar.widget.MyTextviewLight
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/back_colorr"
                                    android:textSize="15sp"
                                    android:text="@string/m_7"
                                    android:gravity="center"/>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:id="@+id/ln_task_seven"
                            style="@style/Widget.CardContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="40dp"
                            android:paddingBottom="40dp">

                            <com.mxi.garbhsanskar.widget.MyTextviewLight
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/back_colorr"
                                android:textSize="15sp"
                                android:text="@string/m_4"
                                android:gravity="center"/>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ln_task_eight"
                                style="@style/Widget.CardContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="40dp"
                                android:paddingBottom="40dp">

                                <com.mxi.garbhsanskar.widget.MyTextviewLight
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/back_colorr"
                                    android:textSize="15sp"
                                    android:text="@string/m_10"
                                    android:gravity="center"/>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:id="@+id/ln_task_nine"
                                style="@style/Widget.CardContent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="40dp"
                                android:paddingBottom="40dp">

                                <com.mxi.garbhsanskar.widget.MyTextviewLight
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/back_colorr"
                                    android:textSize="15sp"
                                    android:text="@string/m_8"
                                    android:gravity="center"/>


                            </LinearLayout>

                        </android.support.v7.widget.CardView>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </RelativeLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <include layout="@layout/bottom_bar_navigation"/>

    </LinearLayout>-->

</FrameLayout>
