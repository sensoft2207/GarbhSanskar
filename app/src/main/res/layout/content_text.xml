<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/task_with_text_only">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.mxi.garbhsanskar.widget.MyTextviewBold
                        android:id="@+id/card_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="18sp"
                        android:textColor="@color/back_colorr"
                        android:text="How are you?"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:orientation="vertical">

                        <com.mxi.garbhsanskar.widget.MyTextviewLight
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:textSize="15sp"
                            android:text="@string/cont"/>

                        <com.mxi.garbhsanskar.widget.MyTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:textSize="18sp"
                            android:textColor="@color/back_colorr"
                            android:text="Never Give Up"/>

                        <com.mxi.garbhsanskar.widget.MyTextviewLight
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingTop="8dp"
                            android:paddingLeft="5dp"
                            android:textSize="15sp"
                            android:text="@string/cont"/>

                        <com.mxi.garbhsanskar.widget.MyTextviewBold
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:textSize="18sp"
                            android:textColor="@color/back_colorr"
                            android:text="How can I help you?"/>

                        <com.mxi.garbhsanskar.widget.MyTextviewLight
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:paddingTop="8dp"
                            android:paddingLeft="5dp"
                            android:textSize="15sp"
                            android:text="@string/cont"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>



</android.support.v4.widget.NestedScrollView>
